<h1><small>Buttons</small></h1>

<table class="table">
  <tr>
    <td>Name</td>
    <td>Number</td>
    <td>Sides</td>
    <td>Modifier</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>

<% @buttons.each do |button| %>
  <tr>
    <td><%= button.name %></td>
    <td><%= button.num %></td>
    <td><%= button.sides %></td>
    <td><%= button.mod %></td>
    <td><%= link_to 'Show', button %></td>
    <td><%= link_to 'Edit', edit_button_path(button) %></td>
    <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

